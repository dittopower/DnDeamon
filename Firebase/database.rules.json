{
    "rules": {
        ".read": "auth != null",
        ".write": "false",
        "Characters": {
            "$uid": {
                ".write": "$uid === auth.uid"
            }
        },
        "Preferences": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "Race": {
            ".read": "true"
        },
        "GameRooms": {
            "$uid": {
                ".write": "$uid === auth.uid"
            }
        }
    }
}